{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@core/*": ["src/core/*"],
            "@pages/*": ["src/pages/*"],
            "@helpers/*": ["src/helpers/*"],
            "@data/*": ["src/data/*"],
            "@api/*": ["src/api/*"],
            "@agent/*": [".agent/*"]
        }
    },
    "include": [
        "tests/**/*.ts",
        "src/**/*.ts",
        "config/**/*.ts",
        ".agent/**/*.ts",
        "playwright.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}