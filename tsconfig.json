{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@fixtures/*": [
                "fixtures/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@data/*": [
                "data/*"
            ]
        }
    },
    "include": [
        "tests/**/*.ts",
        "pages/**/*.ts",
        "fixtures/**/*.ts",
        "helpers/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}